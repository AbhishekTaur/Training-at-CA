import java.util.*;

public class Lalala {

    private static Scanner scan;

	public static void main(String[] args) {
        scan = new Scanner(System.in);
        int n = scan.nextInt();
        int a[] = new int[n];
        int flag = 0;
        
        for(int i=0;i<n;i++){
            a[i] = scan.nextInt();
            if(a[i]<0){
                flag++;
            }
        }
        int j =2;
        int sum;
        while(j<n){
            for(int i=0;i<n;i++){
            sum = 0;
            for(int k=0;k<j;k++){
                if(i+k<n){
                    sum += a[i+k];
                }
            }
            if(sum<0) flag++;
            }
            j++;
        }
        
        System.out.println(flag);
    }
}