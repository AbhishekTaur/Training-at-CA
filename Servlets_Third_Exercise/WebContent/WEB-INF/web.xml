<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Servlets_Third_Exercise</display-name>
  <welcome-file-list>
    <welcome-file>Index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>First_Servlet</display-name>
    <servlet-name>First_Servlet</servlet-name>
    <servlet-class>Servlet1.First_Servlet</servlet-class>
    <init-param>
      <description>This is the url for driver</description>
      <param-name>url</param-name>
      <param-value>jdbc:oracle:thin:@localhost:1521:xe</param-value>
    </init-param>
    <init-param>
      <description>This is the Driver</description>
      <param-name>driver</param-name>
      <param-value>oracle.jdbc.driver.OracleDriver</param-value>
    </init-param>
    <init-param>
      <description>This is the user</description>
      <param-name>user</param-name>
      <param-value>hr</param-value>
    </init-param>
    <init-param>
      <description>This is the password</description>
      <param-name>password</param-name>
      <param-value>hr</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>First_Servlet</servlet-name>
    <url-pattern>/getEmpData</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Second_Servlet</display-name>
    <servlet-name>Second_Servlet</servlet-name>
    <servlet-class>servlet2.Second_Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Second_Servlet</servlet-name>
    <url-pattern>/getData</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Second_Servlet2</display-name>
    <servlet-name>Second_Servlet2</servlet-name>
    <servlet-class>Servlet1.Second_Servlet2</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Second_Servlet2</servlet-name>
    <url-pattern>/Second_Servlet2</url-pattern>
  </servlet-mapping>
</web-app>